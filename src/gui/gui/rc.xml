<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd"
[
    <!ENTITY int "(?:[0-9]++)">
    <!ENTITY hex_int "(?:[0-9A-Fa-f]++)">
    <!ENTITY exp_float "(?:[eE][+-]?&int;)">
    <!ENTITY exp_hexfloat "(?:[pP][-+]?&int;)">

    <!ENTITY ispphash "(?:#|&#37;\:|\?\?=)">
    <!ENTITY pphash "&ispphash;\s*">
]>
<language name="RC" section="Sources"
          version="1" kateversion="5.0"
          indenter="cstyle"
          extensions="*.rc;*.rc2"
          priority="1">
<!--
    Based on the c.xml style
-->
  <highlighting>
    <list name="keywords">
      <item>ACCELERATORS</item>
      <item>AFX_D</item>
      <item>BITMAP</item>
      <item>CURSOR</item>
      <item>DESIGNINFO</item>
      <item>DIALOG</item>
      <item>DIALOGEX</item>
      <item>DLGINIT</item>
      <item>FONT</item>
      <item>HTML</item>
      <item>ICON</item>
      <item>MENU</item>
      <item>MENUEX</item>
      <item>MESSAGETABLE</item>
      <item>PNG</item>
      <item>POPUP</item>
      <item>RCDATA</item>
      <item>REGISTRY</item>
      <item>STRINGTABLE</item>
      <item>TEXTINCLUDE</item>
      <item>TOOLBAR</item>
      <item>VERSIONINFO</item>
      <item>PRELOAD</item>
      <item>LOADONCALL</item>
      <item>FIXED</item>
      <item>MOVEABLE</item>
      <item>DISCARDABLE</item>
      <item>PURE</item>
      <item>IMPURE</item>
      <item>SHARED</item>
      <item>NONSHARED</item>
